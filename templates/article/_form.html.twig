{% form_theme form 'layout/form_layout.html.twig' %}

{{ form_start(form) }}
<div class="form-group row">
    {{ form_widget(form.title, {'attr': {'class': 'border-radius-100px extra-large-input box-shadow-medium border-color-extra-medium-gray padding-50px-left m-0'}}) }}
