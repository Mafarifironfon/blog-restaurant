<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            <link rel="stylesheet" type="text/css" href="{{ asset('theme/assets/css/font-icons.min.css') }}">
            <link rel="stylesheet" type="text/css" href="{{ asset('theme/assets/css/theme-vendors.min.css') }}">
            <link rel="stylesheet" type="text/css" href="{{ asset('theme/assets/css/style.css') }}" />
            <link rel="stylesheet" type="text/css" href="{{ asset('theme/assets/css/responsive.css') }}" />
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            <script type="text/javascript" src="{{ asset('theme/assets/js/jquery.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('theme/assets/js/theme-vendors.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('theme/assets/js/main.js') }}"></script>
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
        {% block body %}
            {% block navbar %}
                {% include 'layout/_navbar.html.twig' %}
            {% endblock %}
            <div class="nk-content">
                {% block main_content %}{% endblock %}
            </div>
            <footer class="footer-dark">
                <div class="footer-bottom padding-40px-tb border-top border-color-dark-transparent">
                    <div class="container">
                        <div class="row align-items-center">
                            <div class="col-12 col-md-6 text-center last-paragraph-no-margin sm-margin-20px-bottom">
                                <p>Â© 2021 by Marion with love<a href="https://www.themezaa.com/" target="_blank"></a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </footer>
        {% endblock %}
    </body>
</html>
