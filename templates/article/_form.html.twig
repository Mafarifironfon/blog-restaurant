    {{ form_widget(form.description, {'attr': {'class': 'border-radius-100px extra-large-input box-shadow-medium border-color-extra-medium-gray padding-50px-left m-0'}}) }}
    {{ form_errors(form.description) }}
</div>

<div class="form-group row">
    {{ form_widget(form.author, {'attr': {'class': 'border-radius-100px extra-large-input box-shadow-medium border-color-extra-medium-gray padding-50px-left m-0'}}) }}
    {{ form_errors(form.author) }}
</div>

<div class="form-group row">
    {{ form_widget(form.creationDate, {'attr': {'class': 'border-radius-100px extra-large-input box-shadow-medium border-color-extra-medium-gray padding-50px-left m-0'}}) }}
    {{ form_errors(form.creationDate) }}
</div>

<div class="form-group row">
