    <button class="btn btn-large btn-gradient-fast-blue-purple d-table d-lg-inline-block lg-margin-15px-bottom md-margin-auto-lr mt-4"><i class="fa fa-search mr-2"></i>Valider</button>
</div>
{{ form_end(form) }}
